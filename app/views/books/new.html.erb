<h2>New Books</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>

<% end %>


<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :Title %>

  <h4>Body</h4>
  <%= f.text_field :Body %>

  <%= f.submit "CreateBooks" %>

<% end %>